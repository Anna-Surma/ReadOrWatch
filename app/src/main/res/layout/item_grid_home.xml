<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/movieWidth"
        android:layout_height="wrap_content"
        android:id="@+id/cardview">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bastille">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/movieAvatar"
                android:layout_width="@dimen/movieWidth"
                android:layout_height="@dimen/movieHeigh"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/moonfall_image"
                app:shapeAppearanceOverlay="@style/roundedImage" />

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="@dimen/titleWidth"
                android:layout_height="@dimen/titleHeigh"
                android:layout_below="@id/movieAvatar"
                android:fontFamily="@font/inter"
                android:lineHeight="@dimen/titleLineHeight"
                android:padding="@dimen/titlePadding"
                android:text="@string/Moonfall"
                android:textFontWeight="600"
                android:textSize="@dimen/titleTextSize"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/movieFavorities"
                android:layout_width="@dimen/favoritiesWidth"
                android:layout_height="@dimen/favoritiesHeight"
                android:layout_below="@id/movieAvatar"
                android:layout_marginLeft="@dimen/favoritiesMargin"
                android:layout_marginTop="@dimen/favoritiesMargin"
                android:layout_toRightOf="@id/movieTitle"
                android:paddingLeft="@dimen/favoritiesPaddingLeft"
                android:paddingTop="@dimen/favoritiesPaddingTop"
                android:paddingRight="@dimen/favoritiesPaddingRight"
                android:paddingBottom="@dimen/favoritiesPaddingBottom"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_favourite" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>